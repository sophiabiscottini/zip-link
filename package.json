{
  "name": "nano-link",
  "version": "0.4.0",
  "description": "A high-performance URL shortening service focused on scalability and data analytics âœ¨",
  "author": "Sophia (Biscottini)",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sophiabiscottini/nano-link.git"
  },
  "bugs": {
    "url": "https://github.com/sophiabiscottini/nano-link/issues"
  },
  "homepage": "https://github.com/sophiabiscottini/nano-link#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run build:api && npm run build:worker",
    "build:api": "cd apps/api && nest build",
    "build:worker": "cd apps/worker && nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "npm run start:api",
    "start:api": "cd apps/api && nest start",
    "start:api:dev": "cd apps/api && nest start --watch",
    "start:api:debug": "cd apps/api && nest start --debug --watch",
    "start:api:prod": "node apps/api/dist/apps/api/src/main.js",
    "start:worker": "cd apps/worker && nest start",
    "start:worker:dev": "cd apps/worker && nest start --watch",
    "start:worker:prod": "node apps/worker/dist/apps/worker/src/main.js",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@nestjs/bullmq": "^10.2.0",
    "@nestjs/common": "^10.4.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/platform-fastify": "^10.4.0",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^5.22.0",
    "bullmq": "^5.25.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "geoip-lite": "^1.4.10",
    "ioredis": "^5.4.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.4.0",
    "@types/geoip-lite": "^1.4.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.22.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.(t|j)s",
      "libs/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/libs/shared/src/$1",
      "^@shared$": "<rootDir>/libs/shared/src"
    }
  }
}
