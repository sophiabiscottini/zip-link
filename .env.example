# ===========================================
# NanoLink Environment Configuration ༘⋆
# ===========================================
# Copy this file to .env and fill in the values

# Application
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://nanolink:nanolink@localhost:5432/nanolink?schema=public

# Redis (Cache & Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Cache Configuration
CACHE_TTL=86400  # 24 hours in seconds

# Analytics Queue
ANALYTICS_QUEUE_NAME=analytics_queue
ANALYTICS_BATCH_SIZE=100
ANALYTICS_BATCH_INTERVAL=5000  # 5 seconds in ms

# Short URL Configuration
SHORT_CODE_LENGTH=6

# Rate Limiting
RATE_LIMIT_TTL=60000   # Time window in ms (default: 1 minute)
RATE_LIMIT_MAX=100     # Max requests per time window per IP
